# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:5000

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_DEFAULT_PAGE_NUMBER=1
VITE_MAX_SEARCH_RESULTS=20
VITE_RECOMMENDATIONS_LIMIT=12
VITE_TRENDING_PRODUCTS_LIMIT=10
VITE_ITEMS_PER_PAGE=12
VITE_SEARCH_DEBOUNCE_MS=300
VITE_NOTIFICATION_DURATION=5000
VITE_REQUEST_TIMEOUT=10000
VITE_RETRY_ATTEMPTS=3

# Authentication
VITE_TOKEN_STORAGE_KEY=skinfluence_auth_token
VITE_TOKEN_HEADER_PREFIX=Bearer

# Error Messages (Optional - defaults provided)
VITE_NETWORK_ERROR_MSG=Network error. Please check your connection and try again.
VITE_SERVICE_UNAVAILABLE_MSG=Service temporarily unavailable. Please try again later.
VITE_AUTH_REQUIRED_MSG=Authentication required. Please log in.
VITE_INVALID_CREDENTIALS_MSG=Invalid credentials. Please check your email and password.
VITE_GENERIC_ERROR_MSG=An unexpected error occurred. Please try again.
VITE_VALIDATION_ERROR_MSG=Please fill in all required fields correctly.
