# Database Configuration
# SECURITY WARNING: Replace with your own MongoDB credentials
# For production, use environment variables or secure secret management
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/skinfluence?retryWrites=true&w=majority&appName=Skinfluence
DB_CONNECTION_TIMEOUT=10000
DB_RETRY_ATTEMPTS=3

# Authentication Configuration
# SECURITY CRITICAL: Generate a secure random JWT secret for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here-generate-with-crypto-randomBytes
JWT_EXPIRES_IN=24h
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128
TOKEN_HEADER_NAME=authorization
TOKEN_PREFIX=Bearer

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=*
BODY_PARSER_LIMIT=10mb

# API Configuration
DEFAULT_PAGE_SIZE=20
DEFAULT_PAGE_NUMBER=1
MAX_SEARCH_RESULTS=50
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Validation Rules
NAME_MIN_LENGTH=2
NAME_MAX_LENGTH=50

# Firebase Configuration (Optional)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-key
# FIREBASE_PROJECT_ID=your-firebase-project-id

# ML Engine Configuration
# Content-Based Engine
ML_INGREDIENT_HYALURONIC_ACID=0.9
ML_INGREDIENT_RETINOL=0.8
ML_INGREDIENT_NIACINAMIDE=0.7
ML_INGREDIENT_SALICYLIC_ACID=0.8
ML_INGREDIENT_GLYCOLIC_ACID=0.7
ML_INGREDIENT_CERAMIDES=0.6
ML_SKIN_TYPES=oily,dry,combination,normal,sensitive
ML_SKIN_CONCERNS=acne,aging,dryness,sensitivity,hyperpigmentation,redness
ML_PRICE_TIER_LOW=20
ML_PRICE_TIER_MEDIUM=40
ML_PRICE_TIER_HIGH=60
ML_DEFAULT_AVG_PRICE=30
ML_DEFAULT_AVG_RATING=4.0
ML_DEFAULT_RECOMMENDATION_LIMIT=10

# Collaborative Filtering
ML_SIMILARITY_THRESHOLD=0.3
ML_SIMILAR_USERS_LIMIT=50
ML_MIN_COMMON_ITEMS=2
ML_VIEW_WEIGHT=1
ML_TIME_THRESHOLD=30
ML_TIME_WEIGHT=1
ML_PURCHASE_WEIGHT=3
ML_FAVORITE_WEIGHT=2
ML_REVIEW_WEIGHT=1
ML_MAX_RATING=5
ML_COLLABORATIVE_LIMIT=10

# Hybrid Engine
ML_WEIGHT_CONTENT=0.6
ML_WEIGHT_COLLABORATIVE=0.4
ML_WEIGHT_POPULARITY=0.1
ML_WEIGHT_DIVERSITY=0.1
ML_HYBRID_DEFAULT_LIMIT=10
ML_HYBRID_MULTIPLIER=2
ML_SAME_BRAND_PENALTY=0.8
ML_SIMILAR_CONCERNS_PENALTY=0.9
ML_HIGH_OVERLAP_THRESHOLD=0.8
ML_MAX_WEIGHT=0.8
ML_MIN_WEIGHT=0.2
ML_WEIGHT_STEP=0.1

# General ML Configuration
ML_CONFIDENCE_THRESHOLD=0.5
ML_CACHE_TTL=3600
ML_MAX_RECOMMENDATIONS=50
