# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/skinfluence
DB_CONNECTION_TIMEOUT=10000
DB_RETRY_ATTEMPTS=3

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
PASSWORD_MIN_LENGTH=6
PASSWORD_MAX_LENGTH=128

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=*
BODY_PARSER_LIMIT=10mb

# External APIs
EXTERNAL_SKINCARE_API=https://your-skincare-api.com/products

# API Configuration
DEFAULT_PAGE_SIZE=20
DEFAULT_PAGE_NUMBER=1
MAX_SEARCH_RESULTS=50
DEFAULT_RECOMMENDATIONS_LIMIT=10
EXTERNAL_API_LIMIT=20

# Valid skin types (comma-separated)
VALID_SKIN_TYPES=oily,dry,combination,normal,sensitive

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
REQUEST_TIMEOUT=30000

# Error Messages (Optional - defaults provided)
INVALID_INPUT_MSG=Invalid input provided
REGISTRATION_FAILED_MSG=Registration failed
INVALID_CREDENTIALS_MSG=Invalid credentials
AUTH_REQUIRED_MSG=Authentication required
ACCESS_DENIED_MSG=Access denied
RESOURCE_NOT_FOUND_MSG=Resource not found
DATABASE_ERROR_MSG=Database operation failed
INTERNAL_ERROR_MSG=Internal server error
SERVICE_UNAVAILABLE_MSG=Service temporarily unavailable

# Validation Rules
PASSWORD_REGEX=^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d@$!%*?&]{6,}$
NAME_MIN_LENGTH=2
NAME_MAX_LENGTH=50

# Firebase Configuration (Optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-key
FIREBASE_PROJECT_ID=your-firebase-project-id
